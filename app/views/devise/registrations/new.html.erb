<div class="bodyyy">
  <div class="login-wrap" style="opacity: 0.9;>
  <div class="login-wrap" >
    <div class="login-html">
      
        <h1 style="color: white;">Sign Up</h1>
        <br>
        
          
          <div class="login-form">
          
               <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
          <%= f.label :email %>
          <div class="group">
               <%= f.email_field :email, autofocus: true, class: 'input' %>
          </div>

          <%= f.label :username %>
          <div class="group">
               <%= f.text_field :username, autofocus: true, class: 'input' %>
          </div>

          <%= f.label :password %>
          <div class="group">
               
               <%= f.password_field :password, class: 'input' %>
          </div>
          <div class="group">
               <%= f.label :password_confirmation %>
               <%= f.password_field :password_confirmation, class: 'input' %>
          </div>
          <div class="group"> 
               <%= f.submit t('.sign_up', default: 'Sign up'), class: 'button' %>
          </div>
          <% end %>
          </div>
          
       <div class="foot-lnk">
          <label for="tab-1"><%= render 'devise/shared/links' %></a>
        </div> 
      
    </div>
  </div>
</div>  

